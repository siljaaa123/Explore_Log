    <div class="card-body card-family" data-templates-target="textContainer">
      <textarea id="text-input" placeholder="Enter text here" data-templates-target="textInput" data-action="blur->templates#handleTextChange"></textarea>
    </div>

    <button data-templates-target="button" data-action="click->templates#handleTextChange">Add</button>

    <button class="btn large save" id="save" data-action="click->templates#savePin" data-action="click->templates#handleTextChange"><i class="fa-solid fa-floppy-disk"></i></button>

